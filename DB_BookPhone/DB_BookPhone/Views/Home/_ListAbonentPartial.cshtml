@using DB_BookPhone.Models
@model Abonent

<div class="product thumbnail">
    <img src="/Images/@Model.Image">
    <div class="caption">
        <h3>@Model.Name</h3>
        <p>@Model.SurName</p>
        <p><strong>@Model.Number</strong></p>
        @Html.ActionLink("Detail", "DetailAbonent", "Home", new { id = @Model.Id }, new { @class = "btn btn-success" })
        @Html.ActionLink("Edit", "Edit", "Home",new { id = @Model.Id }, new { @class = "btn btn-success" })
    </div>
</div>
